@model chickadee.Models.Unit

@{
    ViewData["Title"] = "Delete";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h3 class="lead">Unit Details</h3>
<p>Are you sure you want to delete this unit?</p>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Property)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Property.PropertyId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PropertyManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PropertyManager.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UnitId"/>
        <input type="submit" value="Delete" class="btn btn-lg btn-danger w-100 my-2"/>
        <a asp-action="Index" class="w-100 btn btn-lg btn-secondary my-2">Back to List</a>
    </form>
</div>