@using chickadee.Enums
@model chickadee.Models.Unit
@{
    ViewData["Title"] = "Edit";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h3 class="lead">Edit Unit</h3>
<hr/>
<div class="row">
    <div class="col-md-9">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UnitId"/>
            <div class="form-group mb-2">
                <label asp-for="UnitNo" class="control-label">Unit Number</label>
                <input asp-for="UnitNo" class="form-control"/>
                <span asp-validation-for="UnitNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="UnitType" class="control-label">Unit Type</label>
                <select asp-for="@Model.UnitType" class="form-control" asp-items="Html.GetEnumSelectList<UnitType>()">Unit Type</select>
                <span asp-validation-for="UnitType" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PropertyId" class="control-label">Property Name</label>
                <select asp-for="PropertyId" class="form-control" asp-items="ViewBag.PropertyId"></select>
                <span asp-validation-for="PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PropertyManagerId" class="control-label">Property Manager</label>
                <select asp-for="PropertyManagerId" class="form-control" asp-items="ViewBag.PropertyManagerId"></select>
                <span asp-validation-for="PropertyManagerId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Save" class="w-100 btn btn-lg btn-green my-3"/>
            </div>
        </form>
        <div>
            <a asp-action="Index" class="w-100 btn btn-lg btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}