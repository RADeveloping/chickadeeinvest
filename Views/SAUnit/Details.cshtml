@model chickadee.Models.Unit

@{
    ViewData["Title"] = "Details";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h3 class="lead">Unit Details</h3>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Property)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Property.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PropertyManager)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PropertyManager.FirstName)
             @Html.DisplayFor(model => model.PropertyManager.LastName)
        </dd>
    </dl>
</div>
<div>
    <a class="w-100 btn btn-lg btn-green my-2" asp-action="Edit" asp-route-id="@Model?.UnitId">Edit</a>
    <a asp-action="Index" class="w-100 btn btn-lg btn-secondary my-2">Back to List</a>
</div>